pipeline {
    agent any

    environment {
        PLAYWRIGHT_REPO = 'https://github.com/sjshin001/playwright_sutdy.git'
        PLAYWRIGHT_BRANCH = 'master'
        CI = 'true'
        NODEJS_HOME = '/tmp/nodejs'
        PATH = "/tmp/nodejs/bin:${env.PATH}"
    }

    stages {
        stage('Checkout Playwright Project') {
            steps {
                cleanWs()
                git url: "${PLAYWRIGHT_REPO}", branch: "${PLAYWRIGHT_BRANCH}"
            }
        }

        stage('Install Node.js') {
            steps {
                sh '''
                    NODE_VER="v20.18.1"
                    ARCH="linux-x64"
                    if [ ! -f "$NODEJS_HOME/bin/node" ]; then
                        echo "Installing Node.js ${NODE_VER}..."
                        mkdir -p "$NODEJS_HOME"
                        curl -fsSL "https://nodejs.org/dist/${NODE_VER}/node-${NODE_VER}-${ARCH}.tar.gz" | tar -xz --strip-components=1 -C "$NODEJS_HOME"
                    fi
                    node --version
                    npm --version
                '''
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Install Playwright Browsers') {
            steps {
                sh 'npx playwright install --with-deps chromium'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'npx playwright test'
            }
            post {
                always {
                    publishHTML(target: [
                        reportDir: 'playwright-report',
                        reportFiles: 'index.html',
                        reportName: 'Playwright Report',
                        keepAll: true,
                        alwaysLinkToLastBuild: true
                    ])
                }
            }
        }
    }

    post {
        success {
            echo 'Playwright tests completed successfully!'
        }
        failure {
            echo 'Playwright tests failed!'
        }
        always {
            cleanWs()
        }
    }
}
