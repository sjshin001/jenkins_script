pipeline {
    agent { label 'node-qa' }

    tools {
        nodejs 'node20'
    }

    parameters {
        string(name: 'TEST_ID', defaultValue: '', description: 'Kurly 로그인 ID')
        password(name: 'TEST_PASSWORD', defaultValue: '', description: 'Kurly 로그인 PW')
        password(name: 'KURLY_PAY_PASSWORD', defaultValue: '', description: 'Kurly Pay PW')
        password(name: 'PAYCO_PIN', defaultValue: '', description: 'Payco PIN')
    }

    stages {
        stage('Checkout') {
            steps {
                echo "TEST_ID: ${params.TEST_ID}"
                echo "TEST_PASSWORD exists: ${params.TEST_PASSWORD ? 'YES' : 'NO'}"
                git branch: 'master',
                    url: 'https://github.com/sjshin001/playwright_sutdy.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                bat 'npm install'
                bat 'npx playwright install'
            }
        }

        stage('Run Playwright Tests') {
            steps {
                withCredentials([
                    string(credentialsId: 'kurly-password', variable: 'TEST_PASSWORD'),
                    string(credentialsId: 'kurly-pay-password', variable: 'KURLY_PAY_PASSWORD'),
                    string(credentialsId: 'payco-pin', variable: 'PAYCO_PIN')
                ]) {
                    withEnv([
                        "TEST_ID=${params.TEST_ID}",
                        "CI=true"
                    ]) {
                        bat 'npx playwright test'
                    }
                }
            }
        }
    }

    post {
        always {
            publishHTML(target: [
                allowMissing: true,
                alwaysLinkToLastBuild: true,
                keepAll: true,
                reportDir: 'playwright-report',
                reportFiles: 'index.html',
                reportName: 'Playwright Test Report'
            ])
        }
    }
}
